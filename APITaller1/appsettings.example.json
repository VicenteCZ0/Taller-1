{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=your-database-file.db"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "Microsoft.AspNetCore": "Warning",
      "APITaller1": "Debug" 
    },
    "Console": {
      "IncludeScopes": true
    }
  },
  "JWT": {
    "SignInKey": "YourSecretKeyHereMakeSureItIsLongEnoughToMeetThe512BitsRequirement_AndShouldBeVerySecure",
    "Issuer": "https://your-domain-or-localhost:port",
    "Audience": "https://your-domain-or-localhost:port"
  },
  "Cloudinary": {
    "CloudName": "your-cloud-name",
    "ApiKey": "your-api-key",
    "ApiSecret": "your-api-secret"
  },
  "AllowedHosts": "*",
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.AspNetCore.Hosting.Diagnostics": "Error",
        "Microsoft.AspNetCore.Hosting.Internal.WebHost": "Error",
        "Microsoft.Hosting.Lifetime": "Error",
        "System": "Warning"
      }
    },
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithThreadId"
    ],
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "restrictedToMinimumLevel": "Debug"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log.txt",
          "rollingInterval": "Day",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj}{Newline}{Exception}",
          "restrictedToMinimumLevel": "Information"
        }
      }
    ]
  },
  "Cors": {
    "AllowedOrigins": [
      "https://your-frontend.com",
      "http://localhost:3000"
    ],
    "AllowedMethods": [ "GET", "POST", "PUT", "DELETE" ],
    "AllowedHeaders": [ "Content-Type", "Authorization" ]
  }
}
